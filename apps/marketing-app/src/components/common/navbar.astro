---
import Layout from "@/layouts/Layout.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Features",
    path: "/features",
  },
  {
    title: "Pricing",
    path: "/pricing",
  },
  {
    title: "Docs",
    path: "/docs",
  },
  {
    title: "Github",
    path: "/github",
  },
];
---

<Layout>
  <header class="flex items-center justify-end py-3 px-5 gap-6">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <div class="m-2 block lg:hidden">
          <MenuIcon class="w-6 h-6 text-gray-300" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item) => (
              <>
                {
                  <li>
                    <a
                      href={item.path}
                      class="flex flex-1 py-2 text-sm font-semibold text-gray-300 hover:text-white lg:px-3"
                    >
                      {item.title}
                    </a>
                  </li>
                }
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <button
            type="button"
            class="relative inline-flex items-center rounded-md border border-transparent duration-300 bg-violet-500 px-4 py-2 font-semibold text-white shadow-sm hover:bg-violet-600 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 focus:ring-offset-gray-800"
          >
            <span>Dashboard</span>
          </button>
        </div>
      </MenuItems>
    </Astronav>

    <div class="hidden lg:flex items-center">
      <button
        type="button"
        class="relative inline-flex items-center rounded-md border border-transparent duration-300 bg-violet-500 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-violet-600 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 focus:ring-offset-gray-800"
      >
        <span>Dashboard</span>
      </button>
    </div>
  </header>
</Layout>
